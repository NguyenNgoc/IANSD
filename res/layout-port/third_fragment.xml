<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btPower"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:text="Power" />

        <Button
            android:id="@+id/btMute"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/custom_button"
            android:text="Mute" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <Button
            android:id="@+id/btUp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/custom_button"
            android:text="Up" />

        <Button
            android:id="@+id/btDown"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btOK"
            android:layout_below="@+id/btOK"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/custom_button"
            android:text="Down" />

        <Button
            android:id="@+id/btOK"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btUp"
            android:layout_below="@+id/btUp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_button"
            android:text="OK" />

        <Button
            android:id="@+id/btRight"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btOK"
            android:layout_alignBottom="@+id/btOK"
            android:layout_alignParentRight="true"
            android:background="@drawable/custom_button"
            android:text="Right" />

        <Button
            android:id="@+id/btLeft"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btOK"
            android:layout_alignBottom="@+id/btOK"
            android:layout_alignParentLeft="true"
            android:background="@drawable/custom_button"
            android:text="Left" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp" >

        <Button
            android:id="@+id/btExit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/btMenu"
            android:layout_marginTop="3dp"
            android:background="@drawable/custom_button"
            android:text="Exit" />

        <Button
            android:id="@+id/btMenu"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="3dp"
            android:background="@drawable/custom_button"
            android:text="Menu" />

        <Button
            android:id="@+id/btPrev"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btExit"
            android:layout_alignBottom="@+id/btExit"
            android:layout_centerHorizontal="true"
            android:background="@drawable/custom_button"
            android:text="Prev" />

        <Button
            android:id="@+id/btVolDown"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btPrev"
            android:layout_alignBottom="@+id/btPrev"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:background="@drawable/custom_button"
            android:text="Vol -" />

        <Button
            android:id="@+id/btVolUp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="3dp"
            android:background="@drawable/custom_button"
            android:text="Vol +" />

        <Button
            android:id="@+id/btNext"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btPrev"
            android:layout_alignParentTop="true"
            android:background="@drawable/custom_button"
            android:text="Next" />

    </RelativeLayout>

</LinearLayout>