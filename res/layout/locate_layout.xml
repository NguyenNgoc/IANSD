<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp" >

        <EditText
            android:id="@+id/etHang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tvHang"
            android:background="@drawable/custom_edittext"
            android:ems="10"
            android:inputType="number" >
        </EditText>

        <EditText
            android:id="@+id/etCot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/etHang"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/etHang"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_edittext"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/tvCot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/etCot"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/tvHang"
            android:background="@drawable/custom_textview"
            android:text="Số cột"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvHang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/etHang"
            android:layout_alignParentLeft="true"
            android:background="@drawable/custom_textview"
            android:text="Số hàng"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btOk"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvCot"
            android:layout_below="@+id/etCot"
            android:textColor="#000000"
            android:layout_marginTop="30dp"
            android:background="@drawable/custom_button"
            android:text="OK" />
    </RelativeLayout>

</LinearLayout>